@model string
@{
    ViewData["Title"] = "Chat";
}

<h1>Chat</h1>
<input hidden value="@Model" id="userName"/>
<div class="row">
    <div class="col-md-10">
        <input placeholder="Enter your message" id="txtMessage" class="form-control" />
    </div>
    <div class="col-md-2">
        <button id="btnSend" disabled class="btn btn-success"> Send Message</button>
    </div>
    <hr class="col-md-12 py-3" />
    <div class="col-md-12">
       <ul id="listMessages">

       </ul>
    </div>
</div>

@section Scripts{
    <script src="~/lib/aspnet-signalr/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}